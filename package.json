{
  "name": "email-scraping",
  "version": "0.1.0",
  "private": true,
  "description": "Educational project: Unified, modular email scraping and deliverability toolkit",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "update:emails": "tsx scripts/typescript/mergeScrapyEmails.ts",
    "merge:archive": "tsx scripts/typescript/mergeToArchive.ts",
    "consolidate:all": "tsx scripts/typescript/consolidateAllEmails.ts",
    "search:google": "tsx scripts/typescript/googleSearch.ts"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@supercharge/promise-pool": "^3.2.0",
    "better-sqlite3": "^12.6.0",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0-rc.12",
    "csv-parse": "^5.6.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "fast-xml-parser": "^4.4.1",
    "googlethis": "^1.8.0",
    "node-fetch": "^3.3.2",
    "p-limit": "^4.0.0",
    "playwright": "^1.48.1",
    "smtp-client": "^0.4.0",
    "better-sqlite3": "^11.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.19.7",
    "@types/node-fetch": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
